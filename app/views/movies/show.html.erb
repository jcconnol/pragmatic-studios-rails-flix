<section class="movie">
    <div class="summary">
        <h2><%= link_to @movie.title, movie_path %></h2>
        <h3>
            <%= total_gross(@movie) %>
        </h3>
        <p>
            <%= truncate(@movie.description, length: 40, separator: ' ') %>
        </p>
    </div>
</section>

<section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
</section>
